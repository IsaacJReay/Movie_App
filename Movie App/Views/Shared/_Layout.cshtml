<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Movie App</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
</head>

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="brand" viewBox="0 0 16 16">
        <path
            d="M6.555 1.375 0 2.237v5.45h6.555V1.375zM0 13.795l6.555.933V8.313H0v5.482zm7.278-5.4.026 6.378L16 16V8.395H7.278zM16 0 7.33 1.244v6.414H16V0z" />
    </symbol>
</svg>

<body>
    <div class="container-fluid">
        <div class="row justify-content-center bg-secondary navbar sticky-top">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link text-white" href="">Home</a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand mx-5" href="">
                        <svg class="bi me-2" width="30" height="30">
                            <use xlink:href="#brand"></use>
                        </svg>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="" data-bs-toggle="modal" data-bs-target="#exampleModal"
                        data-bs-whatever="">Add New</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New Movie</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <input type="hidden" id="oldTitle" name="oldTitle" value="">
                        <div class="mb-2">
                            <label for="title-input" class="col-form-label">Title:</label>
                            <input type="text" class="form-control" id="title-input">
                        </div>
                        <div class="mb-2">
                            <label for="duration-input" class="col-form-label">Duration:</label>
                            <input type="number" class="form-control" id="duration-input">
                        </div>
                        <div class="mb-2">
                            <label for="subtitle-input" class="col-form-label">Subtitle:</label>
                            <input type="text" class="form-control" id="subtitle-input">
                        </div>
                        <div class="mb-2">
                            <label for="reldate-input" class="col-form-label">Release Date:</label>
                            <input type="date" class="form-control" id="reldate-input">
                        </div>
                        <div class="mb-2">
                            <label for="language-input" class="col-form-label">Language:</label>
                            <input type="text" class="form-control" id="language-input">
                        </div>
                        <div class="mb-2">
                            <label for="type-input" class="col-form-label">Type:</label>
                            <select class="form-select" aria-label="Default select example" id="type-input">
                                <option value="Action">Action</option>
                                <option value="Horror">Horror</option>
                                <option value="Adventure">Adventure</option>
                                <option value="Science">Science</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="javascript:PostData()"
                        id="SubmitButton">Add</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row pb-2">
        <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="~/img/endgame.png" width=100vw height=512 class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block text-white">
                        <h5>First slide label</h5>
                        <p>Some representative placeholder content for the first slide.</p>
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="~/img/share.png" width=100vw height=512 class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block text-white">
                        <h5>Second slide label</h5>
                        <p>Some representative placeholder content for the second slide.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/img/spider.jpg" width=100vw height=512 class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block text-white">
                        <h5>Third slide label</h5>
                        <p>Some representative placeholder content for the third slide.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="container-fluid px-5 pt-5">
        <div class="row px-5">
            <div class="col px-5 d-flex">
                <h1>Movie</h1>
                <div class="container px-5">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Duration</th>
                                <th scope="col">Subtitle</th>
                                <th scope="col">Release Date</th>
                                <th scope="col">Language</th>
                                <th scope="col">Type</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @RenderBody()
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script>
        function SpawnModal(title, duration, subtitle, releasedate, language, type) {
            var TitleField = document.getElementById('exampleModalLabel');
            var SubmitField = document.getElementById('SubmitButton');
            TitleField.innerText = "Edit Movie Information";
            SubmitField.innerText = "Edit";
            const myModal = new bootstrap.Modal(document.getElementById('exampleModal'));
            myModal.show()
            var hiddenField = document.getElementById("oldTitle")
            hiddenField.value = title

            var Title = document.getElementById('title-input');
            var Duration = document.getElementById('duration-input');
            var Subtitle = document.getElementById('subtitle-input');
            var ReleaseDate = document.getElementById('reldate-input');
            var Language = document.getElementById('language-input');
            var MovieType = document.getElementById('type-input');

            Title.value = title;
            Duration.value = duration;
            Subtitle.value = subtitle;
            ReleaseDate.value = releasedate;
            Language.value = language;
            MovieType.value = type;

            var modal1 = document.getElementById('exampleModal');
            modal1.addEventListener('hidden.bs.modal', event => {
                var oldTitle = document.getElementById('oldTitle');
                var TitleField = document.getElementById('exampleModalLabel');
                var SubmitField = document.getElementById('SubmitButton');
                var Title = document.getElementById('title-input');
                var Duration = document.getElementById('duration-input');
                var Subtitle = document.getElementById('subtitle-input');
                var ReleaseDate = document.getElementById('reldate-input');
                var Language = document.getElementById('language-input');
                var MovieType = document.getElementById('type-input');

                Title.value = "";
                Duration.value = "";
                Subtitle.value = "";
                ReleaseDate.value = "";
                Language.value = "";
                MovieType.value = "";
                oldTitle.value = "";
                TitleField.innerText = "New Movie";
                SubmitField.innerText = "Add";
            })
        }

        function PostData() {
            const Title = document.getElementById('title-input');
            const Duration = document.getElementById('duration-input');
            const Subtitle = document.getElementById('subtitle-input');
            const ReleaseDate = document.getElementById('reldate-input');
            const Language = document.getElementById('language-input');
            const MovieType = document.getElementById('type-input');
            const oldTitle = document.getElementById('oldTitle');

            oldTitle.value ?
                window.location.href = 'https://localhost:7097/movie/edit?OldTitle=' + oldTitle.value + '&Title=' + Title.value + '&Duration=' + Duration.value + '&Subtitle=' + Subtitle.value + '&ReleaseDateString=' + ReleaseDate.value + '&Language=' + Language.value + '&MovieType=' + MovieType.value : window.location.href = 'https://localhost:7097/movie/add?Title=' + Title.value + '&Duration=' + Duration.value + '&Subtitle=' + Subtitle.value + '&ReleaseDateString=' + ReleaseDate.value + '&Language=' + Language.value + '&MovieType=' + MovieType.value;
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
